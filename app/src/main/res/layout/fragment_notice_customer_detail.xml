<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/txt_notice_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Duc Viet" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/txt_notice_customer_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0988888888" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/txt_notice_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_car_number" />

        <TextView
            android:id="@+id/txt_notice_car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_local" />

        <TextView
            android:id="@+id/txt_notice_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="LOI CUA XE "/>

        <TextView
            android:id="@+id/txt_number_trouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

    <ListView
        android:id="@+id/lst_trouble"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/color_tabbar"
        android:gravity="bottom|fill"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/customer_lnr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="11dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/customer_img"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_group_black_24dp" />


            <TextView
                android:id="@+id/customer_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/garage_lnr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="22dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/garage_img"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/garage_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garage"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                 />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/note_lnr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="22dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/note_image"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_phone_in_talk_black_24dp"/>

            <TextView
                android:id="@+id/note_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thong Bao"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_lnr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="22dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/setting_image"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_settings_black_24dp"/>

            <TextView
                android:id="@+id/setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
