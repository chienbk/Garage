<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.CustomerFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.google.android.gms.maps.SupportMapFragment" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="20dp"
                    app:backgroundTint="@color/color_disable_edit_text"
                    app:srcCompat="@android:drawable/ic_menu_mylocation" />

                <LinearLayout
                    android:id="@+id/layout_detail"
                    android:visibility="gone"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/magin_default"
                            android:layout_marginRight="@dimen/magin_default"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:gravity="center_vertical"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Đơn hàng:"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"

                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2">

                                    <TextView
                                        android:id="@+id/txt_orderId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="HH3456"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:gravity="center_vertical"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Tên khách hàng:"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"

                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2">

                                    <TextView
                                        android:id="@+id/txt_nameOfCustomer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="HH3456"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:gravity="center_vertical"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Hãng xe:"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"

                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2">

                                    <TextView
                                        android:id="@+id/txt_typeOfCar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ford Ranger"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:gravity="center_vertical"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Biển số xe:"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"

                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2">

                                    <TextView
                                        android:id="@+id/txt_licenceOfCar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="34E1-132.09"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:gravity="center_vertical"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Mã lỗi:"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"

                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2">

                                    <TextView
                                        android:id="@+id/txt_troubleCode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="34E1-132.09"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/magin_default"
                        android:layout_marginRight="@dimen/magin_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:weightSum="3">

                        <Button
                            android:id="@+id/btn_call"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gọi điện"
                            android:textColor="@android:color/white"
                            android:background="#007c89"
                            android:textAllCaps="false"
                            android:layout_marginRight="5dp"
                            android:textSize="@dimen/txt_tittle" />
                        <Button
                            android:id="@+id/btn_repair"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="#007c89"
                            android:layout_weight="1"
                            android:text="Sửa chữa"
                            android:layout_marginLeft="5dp"
                            android:textColor="@android:color/white"
                            android:textAllCaps="false"
                            android:textSize="@dimen/txt_tittle" />

                        <Button
                            android:id="@+id/btn_cancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="#007c89"
                            android:layout_weight="1"
                            android:text="Hủy"
                            android:layout_marginLeft="5dp"
                            android:textColor="@android:color/white"
                            android:textAllCaps="false"
                            android:textSize="@dimen/txt_tittle" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>